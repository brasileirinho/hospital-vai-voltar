<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".DetalheActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/text_buscar_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nome_do_paciente"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_buscar_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar"
        android:layout_margin="10dp"
        android:background="#C5E7FF"/>

    <Button
        android:id="@+id/button_listar_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listar_pacientes"
        android:layout_margin="10dp"
        android:background="#C5E799"/>

    <!-- O resultado da pesquisa serÃ¡ exibido no elemento abaixo -->
    <TextView
        android:id="@+id/text_resultado_pesquisa"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>